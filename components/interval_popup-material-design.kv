#:kivy 1.10.1
#: import IntervalBox components.intervalbox.IntervalBox
#:import MDRaisedButton kivymd.button.MDRaisedButton

<IntervalPopup@Popup>:
    id : intervalpopup
    intervalbox:intervalbox
    title:""
    separator_height:0    
    auto_dismiss: False
    size_hint: (.7,.3)
    BoxLayout:
        orientation:"horizontal"
        IntervalBox:
            id:intervalbox
            size_hint:(.8,1)
        MDRaisedButton:
            font_size:.3*self.height
            size_hint:(.2,1)           
            text: "OK"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.dismiss()


   