#:kivy 1.10.1
#:import MDRoundFlatIconButton kivymd.button.MDRoundFlatIconButton
#:import MDRectangleFlatIconButton kivymd.button.MDRectangleFlatIconButton
#:import MDFillRoundFlatIconButton kivymd.button.MDFillRoundFlatIconButton
#:import MDRaisedButton kivymd.button.MDRaisedButton

<OpenDialog>:
    filechooser: filechooser
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            size_hint_y: 0.10
            text: "Emplacement actuel: " + filechooser.path
        FileChooserIconView:
            id: filechooser
            filters: ['*.csv', '*.CSV', '*.crv', '*.CRV']

        BoxLayout:
            size_hint_y: 0.10
            spacing: dp(10)
            Widget:
            MDRoundFlatIconButton:
                text: "Annuler"
                icon: 'cancel'
                font_size: 0.6*self.height
                elevation_normal: 5
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.cancel()

            MDFillRoundFlatIconButton:
                text: "Ouvrir"
                icon: 'check-circle-outline'
                font_size: 0.6*self.height
                elevation_normal: 10
                opposite_colors: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.load(filechooser.path, filechooser.selection)