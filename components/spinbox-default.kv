#:kivy 1.10.1
<SpinBox>:
    
    minus_id: minus
    value_id: value
    plus_id: plus
        
    orientation:"horizontal"

    Button:
        id: minus
        size_hint: 0.25, 1
        text:"-"
        on_release: root.substract_one()
        font_size: .7*self.height

    Button:
        id: value
        size_hint: 0.5, 1
        multiline: False
        font_size: .5*self.height
        text: root._display_value
        background_color : 0,0,0.5,1
        on_release : root.opening_popup()
        
    Button:
        id: plus
        size_hint: 0.25, 1
        text:"+"
        on_release: root.add_one()
        font_size: .7*self.height