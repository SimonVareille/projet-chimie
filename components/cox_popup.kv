<CoxPopup@Popup>:
    id : coxpopup
    sliderCoxT:SliderCoxT
    grahCoxLayout:grahCoxLayout
    title:""
    separator_height:0    
    auto_dismiss: False
    size_hint: (.9,.9)
    BoxLayout:
        orientation:"horizontal"
        
        BoxLayout:   
            orientation:"vertical"         
            size_hint: (.2,1)
            Label:
                text:"t = " + str(root._coxvaltToDisplay)
                size_hint:(1,.2)
            Slider:
                id:SliderCoxT
                max:root.maxt
                min:root.mint
                step:root.step
                size_hint:(1,.8)
                orientation:"vertical"
                on_touch_move:root.on_slider_T_active()
                #on_touch_down:root.on_slider_T_active()
        BoxLayout:
            size_hint: (.8,1)
            orientation:"vertical"
                
            BoxLayout:
                size_hint:(1,.9)
                id:grahCoxLayout
            BoxLayout:
                size_hint:(1,.1)
                orientation:"horizontal"
                Label:
                    size_hint:(.8,1)
                Button:
                    size_hint:(.2,1)           
                    text: "OK"
                    on_press: root.dismiss()


<CustButton@Button>:
    font_size:.3*self.height    