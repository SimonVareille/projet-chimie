#:kivy 1.10.1
#:import MDTextFieldRect kivymd.textfields.MDTextFieldRect
#:import MDRectangleFlatButton kivymd.button.MDRectangleFlatButton
#:import MDRaisedButton kivymd.button.MDRaisedButton

<EntryPopup@Popup>:
    title:""
    separator_height:0
    id : popup
    entry : entry
    auto_dismiss: True
    size_hint: (.5,.5)
    GridLayout:
        id: entryGridLayout
        rows: 6
        padding: 10
        spacing: 10
        
        MDTextFieldRect:
            id: entry
            icon_type: 'without'
            multiline: False
            valign: 'center'
            font_size:.6*self.height
            hint_text: str(root.initValue)
            width: root.width
            
        BoxLayout:
            spacing: 10
            CustButton:
                text: "("
                on_press: entry.text += self.text
            CustButton:
                text: ")"
                on_press: entry.text += self.text
            CustButton:
                text: "*10^"
                on_press: entry.text += self.text
            CustButton:
                text: "*"
                on_press: entry.text += self.text
     
        BoxLayout:
            spacing: 10
            CustButton:
                text: "7"
                on_press: entry.text += self.text
            CustButton:
                text: "8"
                on_press: entry.text += self.text
            CustButton:
                text: "9"
                on_press: entry.text += self.text
            CustButton:
                text: "/"
                on_press: entry.text += self.text
        
        
        BoxLayout:
            spacing: 10
            CustButton:
                text: "4"
                on_press: entry.text += self.text
            CustButton:
                text: "5"
                on_press: entry.text += self.text
            CustButton:
                text: "6"
                on_press: entry.text += self.text
            CustButton:
                text: "-"
                on_press: entry.text += self.text
        
        BoxLayout:
            spacing: 10
            CustButton:
                text: "1"
                on_press: entry.text += self.text
            CustButton:
                text: "2"
                on_press: entry.text += self.text
            CustButton:
                text: "3"
                on_press: entry.text += self.text
            CustButton:
                text: "+"
                on_press: entry.text += self.text
        
        BoxLayout:
            spacing: 10
            MDRaisedButton:
                text: "AC"
                font_size:.7*self.height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 0.9, 0.9
                on_press: entry.text = ""
            CustButton:
                text: "0"
                on_press: entry.text += self.text
            CustButton:
                text: "."
                on_press: entry.text += self.text
            MDRaisedButton:
                text: "OK"
                font_size:.7*self.height
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 0.9, 0.9
                on_press: root.on_ok_active()

<CustButton@MDRectangleFlatButton>:
    font_size:.8*self.height
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: 0.9, 0.9