#:kivy 1.10.1

#:import SpinBox components.spinbox.SpinBox
#:import Animation kivy.animation.Animation

<MainWindow>:
    curveBoxLayout: curveBoxLayout
    expCurveSwitch: expCurveSwitch
    buttonDth: buttonDth
    buttonN: buttonN
    buttonS: buttonS
    buttonC: buttonC
    sliderDth:sliderDth
    smallCurveBoxLayout:smallCurveBoxLayout
    restoreMainGraphZoomButton: restoreMainGraphZoomButton

    BoxLayout:
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: 0.85, 0.85, 1, 1
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            orientation:'vertical'
            size_hint: 0.2, 1
            pos: 0, 0

            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    orientation:'horizontal'
                    Button:
                        id: settingsButton
                        font_name: 'materialdesignicons-webfont'
                        font_size: 52
                        text: u'\uf493'
                        halign: 'center'
                        valign: 'center'
                        color: 0,0, 0, 1
                        markup: True
                        size_hint: 0.25, 1
                        background_color: 0, 0, 0, 0
                        on_release: app.open_settings()
                    Button:
                        id: importDataButton
                        text: 'Importer les données expérimentales'
                        halign: 'center'
                        valign: 'center'
                        color: 1, 1, 1, 1
                        markup:True
                        on_release: root.show_openDialog()
                Button:
                    text:"Sélectionner l'intervalle de travail"
                    color: 1, 1, 1, 1
                    on_release:root.on_interval_define_button_active(self)
                    disabled: not root.expDataLoaded
                BoxLayout:
                    Label:
                        id: expCurve
                        size_hint: 0.60, 1
                        text: 'Courbe Expérimentale'
                        color: 0, 0, 0, 1
                        markup:True
                    Switch:
                        id: expCurveSwitch
                        size_hint: 0.40, 1
                        active: False
                        on_active: root.on_expCurveSwitch_active(self.active)
                        disabled: not root.expDataLoaded
                BoxLayout:
                    Label:
                        id: thCurve
                        size_hint: 0.60, 1
                        text:'Courbe théorique'
                        color: 0, 0, 0, 1
                        markup:True
                    Switch:
                        id: thCurveSwitch
                        size_hint: 0.40, 1
                        active: root.thCurveSwitchActive
                        on_active: root.on_thCurveSwitch_active(self.active)
                BoxLayout:
                    Label:
                        id: dCurveLabel 
                        size_hint: 0.60, 1
                        text:'Régression linéaire'
                        color: 0, 0, 0, 1
                        markup:True
                    Switch:
                        id: dCurveCheckBox
                        size_hint: 0.40, 1
                        on_active:root.on_dCurveCheckBox_active(self.active)
                        disabled: not root.expDataLoaded
                BoxLayout:
                    Button:
                        id: CoxCurveButton
                        text:'Courbe C[sub]ox[/sub]'
                        markup: True
                        on_release:root.on_cox_button_active(self)


            BoxLayout:
                id: smallCurveBoxLayout
                
            #Paramètres
            
            BoxLayout:
                orientation:"vertical"
                BoxLayout:
                    Label:
                        text:"Paramètres"
                        markup: True
                        color: 0, 0, 0, 1
                    Button:
                        id: restoreMainGraphZoomButton
                        font_name: 'materialdesignicons-webfont'
                        font_size: 48
                        text: u'\uf99a'
                        halign: 'center'
                        valign: 'center'
                        color: 0,0, 0, 1
                        markup: True
                        background_color: 0, 0, 0, 0
                        size_hint_x: 0
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        visible: False
                        opacity: 0
                        on_release: root.restoreMainGraphZoom()
                        on_visible:
                            Animation(size_hint_x=0.25 if self.visible else 0, duration=0.5).start(self)
                            Animation(opacity = 1 if self.visible else 0, duration=0.5).start(self)
                BoxLayout:
                    size_hint: 1, 2
                    Label:
                        text:"D[sub]th[/sub]"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                        markup: True
                    BoxLayout:
                        orientation:"vertical"
                        SpinBox:
                            id:buttonDth  
                            value: sliderDth.value
                        Slider:
                            id:sliderDth
                            orientation:"horizontal"
                            value: buttonDth.value
                            min: buttonDth.min_value
                            max: buttonDth.max_value
                            step: buttonDth.steps
                BoxLayout:
                    Label:
                        text:"n"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonN
                        steps: 1
                        
                BoxLayout:
                    Label:
                        text:"S"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonS

                BoxLayout:
                    Label:
                        text:"C"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonC


        BoxLayout:
            id: curveBoxLayout
            size_hint: 0.8, 1



