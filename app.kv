#:kivy 1.1.0

#:import SpinBox components.spinbox.SpinBox

<MainWindow>:
    # import curveBoxLayout
    curveBoxLayout: curveBoxLayout
    expCurveSwitch: expCurveSwitch
    buttonDth: buttonDth
    buttonN: buttonN
    buttonS: buttonS
    buttonC: buttonC
    sliderDth:sliderDth

    BoxLayout:
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: 0.85, 0.85, 1, 1
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            orientation:'vertical'
            size_hint: 0.2, 1
            pos: 0, 0

            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    Button:
                        id: importDataButton
                        size_hint: 0.60, 1
                        text: 'Importer les données\nexpérimentales'
                        halign: 'center'
                        valign: 'center'
                        color: 1, 1, 1, 1
                        markup:True
                        on_release: root.show_openDialog()
                BoxLayout:
                    Label:
                        id: expCurve
                        size_hint: 0.60, 1
                        text:'[color=000000]Courbe expérimentale[/color]'
                        markup:True
                    Switch:
                        id: expCurveSwitch
                        size_hint: 0.40, 1
                        active: True
                        on_active: root.on_expCurveSwitch_active(self.active)
                BoxLayout:
                    Label:
                        id: thCurve
                        size_hint: 0.60, 1
                        text:'[color=000000]Courbe théorique[/color]'
                        markup:True
                    Switch:
                        id: thCurveSwitch
                        size_hint: 0.40, 1
                        active: root.thCurveSwitchActive
                        on_active: root.on_thCurveSwitch_active(self.active)

                Button:
                    text:'Selectionner un intervalle'
                    color: 1, 1, 1, 1
                    on_release:root.on_interval_define_button_active(self)

                BoxLayout:
                    Label:
                        id: dCurveLabel 
                        size_hint: 0.60, 1
                        text:'[color=000000]Courbe D[/color]'
                        markup:True
                    Switch:
                        id: dCurveCheckBox
                        size_hint: 0.40, 1
                        
                BoxLayout:
                    Button:
                        id: CoxCurveButton
                        text:'COX'
                        on_release:root.on_cox_button_active(self)


            StackLayout:                            
                Label:
                    text : '[color=000000]Un truc'
                    markup:True
                    
            #Paramètres
            
            BoxLayout:
                orientation:"vertical"

                #Button:
                #    text:"mettre à jour"
                #    on_release:root.on_buttonparametre_active(self)

                Label:
                    text:"Paramètres"
                    color: 0, 0, 0, 1
                BoxLayout:
                    size_hint: 1, 2
                    Label:
                        text:"D[sub]th[/sub]"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                        markup: True
                    BoxLayout:
                        orientation:"vertical"
                        SpinBox:
                            id:buttonDth                        
                        Slider:
                            id:sliderDth
                            orientation:"horizontal"
                            on_touch_move:root.on_slider_Dth_active()
                BoxLayout:
                    Label:
                        text:"n"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonN
                        steps: 1
                        
                BoxLayout:
                    Label:
                        text:"S"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonS

                BoxLayout:
                    Label:
                        text:"C"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonC


        BoxLayout:
            id: curveBoxLayout
            #text:'[color=000000]courbe'
            #markup:True
            size_hint: 0.8, 1



