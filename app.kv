#:kivy 1.1.0

#:import SpinBox components.spinbox.SpinBox

<MainWindow>:
    curveBoxLayout: curveBoxLayout
    expCurveSwitch: expCurveSwitch
    buttonDth: buttonDth
    buttonN: buttonN
    buttonS: buttonS
    buttonC: buttonC
    sliderDth:sliderDth

    BoxLayout:
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: 0.85, 0.85, 1, 1
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            orientation:'vertical'
            size_hint: 0.2, 1
            pos: 0, 0

            BoxLayout:
                orientation:'vertical'
                Button:
                    id: importDataButton
                    text: 'Importer les données expérimentales'
                    halign: 'center'
                    valign: 'center'
                    color: 1, 1, 1, 1
                    markup:True
                    on_release: root.show_openDialog()
                Button:
                    text:"Selectionner l'intervalle de travail"
                    color: 1, 1, 1, 1
                    on_release:root.on_interval_define_button_active(self)
                BoxLayout:
                    Label:
                        id: expCurve
                        size_hint: 0.60, 1
                        text:'Courbe Experimentale'
                        color: 0, 0, 0, 1
                        markup:True
                    Switch:
                        id: expCurveSwitch
                        size_hint: 0.40, 1
                        active: False
                        on_active: root.on_expCurveSwitch_active(self.active)
                BoxLayout:
                    Label:
                        id: thCurve
                        size_hint: 0.60, 1
                        text:'Courbe théorique'
                        color: 0, 0, 0, 1
                        markup:True
                    Switch:
                        id: thCurveSwitch
                        size_hint: 0.40, 1
                        active: root.thCurveSwitchActive
                        on_active: root.on_thCurveSwitch_active(self.active)
                BoxLayout:
                    Label:
                        id: dCurveLabel 
                        size_hint: 0.60, 1
                        text:'Regression linéaire'
                        color: 0, 0, 0, 1
                        markup:True
                    Switch:
                        id: dCurveCheckBox
                        size_hint: 0.40, 1
                        
                BoxLayout:
                    Button:
                        id: CoxCurveButton
                        text:'Courbe C[sub]ox[/sub]'
                        markup: True
                        on_release:root.on_cox_button_active(self)


            BoxLayout:                            
                
            #Paramètres
            
            BoxLayout:
                orientation:"vertical"
                Label:
                    text:"Paramètres"
                    color: 0, 0, 0, 1
                BoxLayout:
                    size_hint: 1, 2
                    Label:
                        text:"D[sub]th[/sub]"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                        markup: True
                    BoxLayout:
                        orientation:"vertical"
                        SpinBox:
                            id:buttonDth  
                            value: sliderDth.value                 
                        Slider:
                            id:sliderDth
                            orientation:"horizontal"
                            value: buttonDth.value
                BoxLayout:
                    Label:
                        text:"n"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonN
                        steps: 1
                        
                BoxLayout:
                    Label:
                        text:"S"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonS

                BoxLayout:
                    Label:
                        text:"C"
                        color: 0, 0, 0, 1
                        size_hint: 0.25, 1
                    SpinBox:
                        id:buttonC


        BoxLayout:
            id: curveBoxLayout
            size_hint: 0.8, 1



