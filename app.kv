#kivy 1.0

#:import SpinBox components.spinbox.SpinBox

<MainWindow>:
    # import curveBoxLayout
    curveBoxLayout: curveBoxLayout
    choixCourbe: choixCourbe
    
    expCurveSwitch: expCurveSwitch
    
    BoxLayout:
        size: root.width, root.height
        canvas.before:
            Color:
                rgba:0.85,0.85,1,1
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            id: choixCourbe
            orientation:'vertical'
            size_hint:(0.2, 1) 
            pos:(0, 0)
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    Label:
                        id: expCurveLabel
                        size_hint:(0.85,1)
                        text: root.expCurveText
                        #text:'[color=ff3399]Courbe\n experimentale[/color]'
                        markup:True
                    Switch:
                        id: expCurveSwitch
                        active: True
                        on_active: root.on_expCurveSwitch_active(self.active)
                BoxLayout:
                    Label:
                        id: thCurve
                        size_hint:(0.85,1)
                        text:'[color=0066ff]Courbe\n th√©orique[/color]'
                        markup:True
                    Switch:
                        id: thCurveSwitch
                        active: root.thCurveCheckBoxActive
                        on_active: root.on_thCurveSwitch_active(self.active)
                BoxLayout:
                    Label:
                        id: intervalSelectionLabel
                        size_hint:(0.85,1)
                        text:'[color=00ff00]Selectionner\n un intervalle\''
                        markup:True
                    Switch:
                        id: intervalSelectionSwitch
                BoxLayout:
                    Label:
                        id: dCurveLabel 
                        size_hint:(0.85,1)
                        text:'[color=ffff00]Courbe D[/color]'
                        markup:True
                    Switch:
                        id: dCurveCheckBox
            StackLayout:                            
                Label:
                    text : '[color=000000]Un truc'
                    markup:True
            BoxLayout:
                SpinBox:
        BoxLayout:
            id: curveBoxLayout
            #text:'[color=000000]courbe'
            #markup:True
            size_hint:(0.8,1)



