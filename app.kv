#kivy 1.0

#:import SpinBox components.spinbox.SpinBox

<MainWindow>:
    # import curveBoxLayout
    curveBoxLayout: curveBoxLayout
    choixCourbe: choixCourbe
    
    expCurveCheckBox: expCurveCheckBox    
    buttonDth: buttonDth
    buttonN: buttonN
    buttonS: buttonS
    buttonC: buttonC
       
    BoxLayout:
        size: root.width, root.height
        canvas.before:
            Color:
                rgba:0.85,0.85,1,1
            Rectangle:
                pos:self.pos
                size:self.size
        BoxLayout:
            id: choixCourbe
            orientation:'vertical'
            size_hint:(0.2, 1) 
            pos:(0, 0)
            BoxLayout:
                orientation:'vertical'
                BoxLayout:
                    Label:
                        id: expCurveLabel
                        size_hint:(0.85,1)
                        text: root.expCurveText
                        #text:'[color=ff3399]Courbe\n experimentale[/color]'
                        markup:True
                    CheckBox:
                        id: expCurveCheckBox
                        active: True
                        on_active: root.on_expCurveCheckBox_active(self.active)
                BoxLayout:
                    Label:
                        id: thCurve
                        size_hint:(0.85,1)
                        text:'[color=0066ff]Courbe\n théorique[/color]'
                        markup:True
                    CheckBox:
                        id: thCurveCheckBox
                        active: root.thCurveCheckBoxActive
                        on_active: root.on_thCurveCheckBox_active(self.active)
                BoxLayout:
                    Label:
                        id: intervalSelectionLabel
                        size_hint:(0.85,1)
                        text:'[color=00ff00]Selectionner\n un intervalle\''
                        markup:True
                    CheckBox:
                        id: intervalSelectionCheckBox
                BoxLayout:
                    Label:
                        id: dCurveLabel 
                        size_hint:(0.85,1)
                        text:'[color=ffff00]Courbe D[/color]'
                        markup:True
                    CheckBox:
                        id: dCurveCheckBox
            StackLayout:                            
                Label:
                    text : '[color=000000]Un truc'
                    markup:True
            BoxLayout:  #parametres
                orientation:"vertical"
                Button:
                    text:"mettre à jour"
                    on_release:root.on_buttonparametre_active(self)
                Label:
                    text:"Parametres"
                BoxLayout:
                    
                    Label:
                        text:"Dth"
                    BoxLayout:
                        orientation:"vertical"
                        SpinBox:
                            id:buttonDth                        
                              
                        Slider:
                            orientation:"horizontal"
                BoxLayout:
                    
                    Label:
                        text:"n"
                    SpinBox:
                        id:buttonN
                        
                BoxLayout:
                    Label:
                        text:"s"
                    SpinBox:
                        id:buttonS

                BoxLayout:
                    
                    Label:
                        text:"C"
                    SpinBox:
                        id:buttonC
                        




        BoxLayout:
            id: curveBoxLayout
            #text:'[color=000000]courbe'
            #markup:True
            size_hint:(0.8,1)



